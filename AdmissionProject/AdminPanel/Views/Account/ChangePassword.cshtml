<form asp-action="ChangePassword" asp-controller="Account" method="post">
    <h2>Поменять пароль</h2>
    <div class="form-group">
        <label for="currentpassword">Пароль</label>
        <input type="currentpassword" id="currentpassword" name="currentpassword" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="confirmpasspord">Повторите пароль</label>
        <input type="confirmpassword" id="confirmpassword" name="confirmpassword" class="form-control" required />
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert" style="margin-top: 10px">
            @TempData["ErrorMessage"]
        </div>
    }

    <button type="submit" class="btn btn-primary" style="margin-top: 10px">Изменить пароль</button>
</form>
