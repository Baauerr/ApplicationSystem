@using Common.Enum
@model EntrantViewModel

<div class="card mb-3 ">
    <div class="card-body">
        <form asp-action="Profile" asp-controller="Account" method="post">
            <h2>Профиль</h2>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="@Model.Profile.Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="fullname">ФИО</label>
                <input type="fullname" id="fullname" name="fullname" value="@Model.Profile.FullName" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="birthdate">Дата рождения</label>
                <input type="date" id="birthdate" name="birthdate" value="@Model.Profile.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="phonenumber">Номер телефона</label>
                <input type="phonenumber" id="phonenumber" name="phonenumber" value="@Model.Profile.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label for="citizenship">Гражданство</label>
                <input type="citizenship" id="citizenship" name="citizenship" value="@Model.Profile.Citizenship" class="form-control" />
            </div>
            <div class="form-group">
                <label for="gender">Пол</label>
                @if (Model.Profile.Gender == Gender.MALE)
                {
                    <select type="" id="gender" name="gender" value="@Model.Profile.Gender" class="form-control" required>
                        <option value=@Gender.MALE selected>Мужчина</option>
                        <option value=@Gender.FEMALE>Женщина</option>
                    </select>
                }
                else
                {
                    <select type="" id="gender" name="gender" value="@Model.Profile.Gender" class="form-control" required>
                        <option value=@Gender.MALE>Мужчина</option>
                        <option value=@Gender.FEMALE selected>Женщина</option>
                    </select>
                }

            </div>


            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert" style="margin-top: 10px">
                    @TempData["ErrorMessage"]
                </div>
            }

            <button type="submit" class="btn btn-primary" style="margin-top: 10px">Изменить</button>
        </form>
    </div>
</div>


    <div class="card mb-3 ">
        <div class="card-body">
            <form asp-action="Passport" asp-controller="Entrant" method="post">
                <h2>Паспортные данные</h2>
                <div class="form-group">
                    <label for="email">Серия</label>
                    <input type="series" id="series" name="series" value="@Model.PassportForm.Series" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="number">Номер</label>
                    <input type="number" id="number" name="number" value="@Model.PassportForm.Number" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="birthplace">Место рождения</label>
                    <input type="birthplace" id="birthplace" name="birthplace" value="@Model.PassportForm.BirthPlace" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="issuedate">Дата выдачи</label>
                    <input type="date" id="issuedate" name="issuedate" value="@Model.PassportForm.IssueDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="issueplace">Место выдачи</label>
                    <input type="issueplace" id="issueplace" name="issueplace" value="@Model.PassportForm.IssuePlace" class="form-control" />
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert" style="margin-top: 10px">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <a class="nav-link text-dark" asp-area="" asp-controller="Entrant" asp-action="Documents">Документы</a>

                <button type="submit" class="btn btn-primary" style="margin-top: 10px">Изменить</button>
            </form>
    </div>
</div>


