@using Common.DTO.Entrance
@model ManagersListDTO

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Имя менеджера</th>
            <th scope="col">Email менеджера</th>
            <th scope="col">Роль менеджера</th>
            <th scope="col">Дать роль</th>
            <th scope="col">Убрать роль</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model.ManagerDTO)
        {
            <tr>
                <td class="card-text">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="ManagerProfile" asp-route-managerId="@manager.Id">
                        @manager.FullName
                    </a>
                </td>
                <td class="card-text">@manager.Email</td>
                <td class="card-text">@manager.Role</td>
                <td class="card-text">
                   
                </td>
                <td class="card-text">
                    <form class="remove-manager-form" method="post">
                        <input type="hidden" name="role" value="@manager.Role" />
                        <input type="hidden" name="managerId" value="@manager.Id" />
                        <button type="submit" class="btn btn-danger mt-3">Удалить</button>
                    </form>
                </td>
                <td class="card-text">
                    <form class="remove-manager-form" method="post">
                        <input type="hidden" name="role" value="@manager.Role" />
                        <input type="hidden" name="managerId" value="@manager.Id" />
                        <button type="submit" class="btn btn-danger mt-3">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>